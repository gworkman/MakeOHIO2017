<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="4dp"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:layout_width="75dp"
        android:layout_height="150dp"
        android:background="@color/grey_remote"
        android:id="@+id/volume_buttons">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:src="@drawable/ic_up"
            android:id="@+id/button_volume_up"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="VOL"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:src="@drawable/ic_down"
            android:layout_alignParentBottom="true"
            android:id="@+id/button_volume_down"/>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Change Input"
        android:layout_toEndOf="@id/volume_buttons"
        android:layout_toStartOf="@+id/channel_buttons"
        android:id="@+id/change_input_button"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_input_button"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="4dp"
        android:text="Mute"
        android:layout_toEndOf="@id/volume_buttons"
        android:layout_toStartOf="@+id/channel_buttons"
        android:id="@+id/mute_button"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mute_button"
        android:layout_marginTop="4dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Pause"
        android:layout_toEndOf="@id/volume_buttons"
        android:layout_toStartOf="@+id/channel_buttons"
        android:id="@+id/play_pause_button"/>

    <RelativeLayout
        android:layout_width="75dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:background="@color/grey_remote"
        android:id="@+id/channel_buttons">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:src="@drawable/ic_up"
            android:id="@+id/button_chan_up"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="CHAN"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:src="@drawable/ic_down"
            android:layout_alignParentBottom="true"
            android:id="@+id/button_chan_down"/>

    </RelativeLayout>

</RelativeLayout>